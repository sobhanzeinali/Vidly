@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <p>No Movie Exist.</p>
}
else
{
    <br/>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">Movie</th>
            <th scope="col">Genre</th>
        </tr>
        </thead>
        <tbody>

        @foreach (var iMovie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(iMovie.Name, "Details", new {id = iMovie.Id}, null)
                </td>
                <td>@iMovie.Genre.Name</td>
            </tr>
        }

        </tbody>
    </table>
}